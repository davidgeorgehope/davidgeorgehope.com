---
import Base from '../layouts/Base.astro';
import projects from '../data/projects.json';
---

<Base title="Projects | David George Hope">
  <section class="projects-page">
    <h1>Projects</h1>
    <p class="intro">
      Things I've builtâ€”mostly around observability, instrumentation, and making complex systems easier to understand.
      All open source on <a href="https://github.com/davidgeorgehope">GitHub</a>.
    </p>

    <div class="grid">
      {projects.map((project) => (
        <a href={project.url} class="card" target="_blank" rel="noopener noreferrer">
          <h3>{project.title}</h3>
          <p>{project.description}</p>
          <div class="tags">
            {project.tags.map((tag) => (
              <span class="tag">{tag}</span>
            ))}
          </div>
        </a>
      ))}
    </div>
  </section>
</Base>

<style>
  .projects-page {
    padding: 2rem 0;
  }

  h1 {
    margin-bottom: 0.5rem;
  }

  .intro {
    color: var(--color-text-muted);
    margin-bottom: 2rem;
  }

  .grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 1rem;
  }

  .card {
    display: block;
    padding: 1.25rem;
    background: var(--color-card-bg);
    border: 1px solid var(--color-border);
    border-radius: 8px;
    transition: border-color 0.2s, box-shadow 0.2s;
  }

  .card:hover {
    border-color: var(--color-accent);
    box-shadow: 0 2px 8px rgba(0,0,0,0.04);
    text-decoration: none;
  }

  .card h3 {
    color: var(--color-text);
    margin-bottom: 0.5rem;
    font-size: 1rem;
  }

  .card p {
    color: var(--color-text-muted);
    font-size: 0.9rem;
    margin-bottom: 0.75rem;
    line-height: 1.5;
  }

  .tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .tag {
    font-size: 0.75rem;
    padding: 0.2rem 0.5rem;
    background: var(--color-bg);
    border-radius: 4px;
    color: var(--color-text-muted);
  }

  @media (max-width: 600px) {
    .grid {
      grid-template-columns: 1fr;
    }
  }
</style>
