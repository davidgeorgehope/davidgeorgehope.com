<style>
  .hero {
    padding: 3rem 0 2rem;
    text-align: center;
  }

  .photo-placeholder {
    width: 120px;
    height: 120px;
    margin: 0 auto 1.5rem;
    border-radius: 50%;
    background: var(--color-border);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .photo-placeholder img {
    width: 100%;
    height: 100%;
    border-radius: 50%;
    object-fit: cover;
  }

  h1 {
    margin-bottom: 1rem;
  }

  .tagline {
    color: var(--color-text-muted);
    max-width: 540px;
    margin: 0 auto 1.5rem;
  }

  .links {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .link-button {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.6rem 1.2rem;
    border: 1px solid var(--color-border);
    border-radius: 6px;
    color: var(--color-text);
    font-size: 0.9rem;
    transition: border-color 0.2s, background 0.2s;
  }

  .link-button:hover {
    border-color: var(--color-accent);
    background: var(--color-card-bg);
    text-decoration: none;
  }

  .link-button svg {
    opacity: 0.7;
  }

  .recent {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid var(--color-border);
  }

  .recent h2 {
    margin-bottom: 1rem;
  }

  .recent p {
    color: var(--color-text-muted);
  }

  @media (max-width: 600px) {
    .hero {
      padding: 2rem 0 1rem;
    }
  }
</style>
